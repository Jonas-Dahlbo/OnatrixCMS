@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
    ViewBag.Title = Model?.Value("pageTitle") ?? null;
    ViewBag.Id = "riskManagement";

	var riskSidebarImage = Model?.Value<IPublishedContent>("riskSidebarImage").Url() ?? "";
	var riskImage1 = Model?.Value<IPublishedContent>("riskImage1").Url() ?? "";
	var	riskImage2 = Model?.Value<IPublishedContent>("riskImage2").Url() ?? "";
}

<section class="riskmanagement container">
        <div class="risk-sidebar">
            <div><h5>@Model?.Value("riskSidebarTitle")</h5></div>
            <div><img src="@riskSidebarImage" alt=""></div>
            <div>@Model?.Value("riskSidebarText")</div>
            <div class="mail-form">
                <div><h5>How can we help you?</h5></div>
                <div class="form-ingress">online support 24/7, we are here to help you</div>
                <form action="post">
                    <input type="text" name="" id="" placeholder="Email-address">
                </form>
            </div>
        </div>
        <div class="risk-content">
            <img src="@riskImage1" alt="">
            <div class="key-point">
                <div><h4>@Model?.Value("riskSection1Title")</h4></div>
                <ul class="point-list">
                    <li><div>@Model?.Value("riskSection1ListItem1")</div></li>
                    <li><div>@Model?.Value("riskSection1ListItem2")</div></li>
                    <li><div>@Model?.Value("riskSection1ListItem3")</div></li>
                </ul>
                <div><h4>@Model?.Value("riskSection2Title")</h4></div>
                <div>@Model?.Value("riskSection2Paragraph1")</div>
                <div>@Model?.Value("riskSection2Paragraph2")</div>
                <div>@Model?.Value("riskSection2ListIngress")</div>
                <ul class="point-list">
                    <li> <div>@Model?.Value("riskSection2ListItem1")</div></li>
                    <li> <div>@Model?.Value("riskSection2ListItem2")</div></li>
                    <li> <div>@Model?.Value("riskSection2ListItem3")</div></li>
                </ul>
                <div>@Model?.Value("riskSection2Paragraph3")</div>
                <div>@Model?.Value("riskSection2Paragraph4")</div>
                <img id="img2-risk" src="@riskImage2" alt="">
                <div><h4>@Model?.Value("riskSection3Title")</h4></div>
                <div>@Model?.Value("riskSection3Paragraph")</div>
                <ul class="point-list">
                    <li><div>@Model?.Value("riskSection3ListItem1")</div></li>
                    <li><div>@Model?.Value("riskSection3ListItem2")</div></li>
                    <li><div>@Model?.Value("riskSection3ListItem3")</div></li>
                    <li><div>@Model?.Value("riskSection3ListItem4")</div></li>
                </ul>
            </div>
        </div>
    </section>
    <div class="risk-form container">
        <h4>Have a question ?</h4>
        <form action="">
            <input type="text" id="name" placeholder="Name">
            <input type="text" id="email" placeholder="Email"> 
            <textarea id="question" placeholder="Question"></textarea>
            <button class="btn-primary">Submit</button>
        </form>
    </div>

	<section class="contact">
		@await Html.PartialAsync("partials/static/contactPartial.cshtml")
	</section>