@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
    ViewBag.Title = Model?.Value("pageTitle") ?? null;
    ViewBag.Id = "annualReport";

	var annualImage1 = Model?.Value<IPublishedContent>("annualImage")?.Url() ?? "";
	var annualImage2 = Model?.Value<IPublishedContent>("annualSection2Image")?.Url() ?? "";
	var annualImage3 = Model?.Value<IPublishedContent>("annualSection3Image")?.Url() ?? "";
	var annualSidebarImage = new[] {
			Model?.Value<IPublishedContent>("annualProject1Image")?.Url() ?? "",
			Model?.Value<IPublishedContent>("annualProject2Image")?.Url() ?? "",
			Model?.Value<IPublishedContent>("annualProject3Image")?.Url() ?? "",
			Model?.Value<IPublishedContent>("annualProject4Image")?.Url() ?? ""
		} ;
        
	var sidebarProjectsTitle = new[] {
		Model?.Value("annualProject1Title"),
		Model?.Value("annualProject2Title"),
		Model?.Value("annualProject3Title"),
		Model?.Value("annualProject4Title"),
	};
	var sidebarDate = new[] {
		Model?.Value("annualProject1Date"),
		Model?.Value("annualProject2Date"),
		Model?.Value("annualProject3Date"),
		Model?.Value("annualProject4Date"),
	};
}

<section class="annual-report container">
        <div class="annual-report-content">
            <div class="note"><i class="fa-solid fa-calendar-days" style="color: #9C9EA6;"></i>@Model?.Value("annualDate")</div>
            <div style="font-weight: 600;">@Model?.Value("annualTitleText")</div>
            <img id="annual-img1" src="@annualImage1" alt="">
            <div class="suggestions">
                <h6>@Model?.Value("suggestionsTitle")</h6>
                <ul class="annual-list">
                    <li><div>@Model?.Value("suggestionsListItem1")</div></li>
                    <li><div>@Model?.Value("suggestionsListItem2")</div></li>
                    <li><div>@Model?.Value("suggestionsListItem3")</div></li>
                </ul>
            </div>
            <div class="annual-section2">
                <img src="@annualImage2" alt="">
                <div>
                    <h6>@Model?.Value("annualSection2Title")</h6>
                	<p>@Model?.Value("annualSection2Paragraph1")</p>
                	<p>@Model?.Value("annualSection2Paragraph2")</p>
                </div>
            </div>
            <div class="annual-section3">
                <h6>@Model?.Value("annualSection3Title")</h6>
                <p>@Model?.Value("annualSection3Paragraph1")</p>
                <p>@Model?.Value("annualSection3Paragraph2")</p>
                <p>@Model?.Value("annualSection3Paragraph3")</p>
                <img src="@annualImage3" alt="">
            </div>
            <div class="annual-section4">
                <h6>@Model?.Value("annualSection4Title")</h6>
                <p>@Model?.Value("annualSection4Paragraph1")</p>
                <p>@Model?.Value("annualSection4Paragraph2")</p>
            </div>
            <div class="tag-container">
                <p style="font-weight: 700;">Tags:</p>
                <div class="tags-sub2">
                    <div>@Model?.Value("annualTag1")</div>
                    <div>@Model?.Value("annualTag2")</div>
                    <div>@Model?.Value("annualTag3")</div>
                </div>
            </div>
        </div>
        <div class="annual-sidebar">
            <h5>@Model?.Value("annualProjectsTitle")</h5>
            <div class="sidebar-recent">
				@for(var i = 0; i < 4; i++) {
					<div class="recent-grp  @(i == 3 ? "last-grp" : "")">
                    <img src="@annualSidebarImage[i]" alt="">
                    <div>
                        <p style="font-weight: 600;">@sidebarProjectsTitle[i]</p>
                    	<div class="note"><i class="fa-solid fa-calendar-days" style="color: #9C9EA6;"></i>@sidebarDate[i]</div>
                    </div>
                </div>
				}
            </div>
            <h5 style="padding-top: 10px;">Tags</h5>
            <div class="tags">
                <div>@Model?.Value("annualSidebarTag1")</div>
                <div>@Model?.Value("annualSidebarTag2")</div>
                <div>@Model?.Value("annualSidebarTag3")</div>
                <div>@Model?.Value("annualSidebarTag4")</div>
                <div>@Model?.Value("annualSidebarTag5")</div>
                <div>@Model?.Value("annualSidebarTag6")</div>
                <div>@Model?.Value("annualSidebarTag7")</div>
                <div>@Model?.Value("annualSidebarTag8")</div>
            </div>
            <div class="mail-form">
                <div><h5>How can we help you?</h5></div>
                <div class="form-ingress">online support 24/7, we are here to help you</div>
                <form action="post">
                    <input type="text" name="" id="" placeholder="Email-address">
                </form>
            </div>
        </div>
    </section>

    <section class="contact">
        @await Html.PartialAsync("partials/static/contactPartial.cshtml")
    </section>